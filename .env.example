# Coinbase API Credentials
COINBASE_API_KEY=your-api-key-id-here
COINBASE_API_SECRET=your-api-secret-here

# Server Settings
PORT=8000
ENVIRONMENT=production
LOG_LEVEL=INFO
HOST=0.0.0.0

# Trading Settings (defaults, can be overridden by TradingView)
DEFAULT_POSITION_SIZE_USD=100.0
DEFAULT_STOP_LOSS_PCT=1.5
DEFAULT_TAKE_PROFIT_PCT=1.5
DEFAULT_TRAILING_ACTIVATION_PCT=0.8
DEFAULT_TRAILING_DISTANCE_PCT=0.75
MAX_LEVERAGE=3.0

# Risk Management
MAX_CONCURRENT_POSITIONS=5
ENABLE_TRADING=false

# Security (optional)
WEBHOOK_SECRET=

# Position Persistence
POSITIONS_FILE=positions.json
